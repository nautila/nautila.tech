# See https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{md,Vagrantfile,toml,toml.j2,yaml,yaml.j2,yml,yml.j2}]
indent_style = space

[*.md]
max_line_length = off
trim_trailing_whitespace = false
